		<class>com.employmeo.objects.Person</class>
		<class>com.employmeo.objects.Position</class>
		<class>com.employmeo.objects.Question</class>
		<class>com.employmeo.objects.Respondant</class>
		<class>com.employmeo.objects.Response</class>
		<class>com.employmeo.objects.SurveyQuestion</class>
		<class>com.employmeo.objects.Survey</class>
