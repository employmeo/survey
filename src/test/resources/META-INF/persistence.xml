		<class>com.employmeo.objects.PayrollSummary</class>
		<class>com.employmeo.objects.Corefactor</class>
		<class>com.employmeo.objects.Location</class>
		<class>com.employmeo.objects.AccountSurvey</class>
		<class>com.employmeo.objects.PredictiveModel</class>
		<class>com.employmeo.objects.RespondantScore</class>
		<class>com.employmeo.objects.RespondantScorePK</class>
		<class>com.employmeo.objects.PredictiveModelPK</class>
		<class>com.employmeo.objects.Partner</class>
		<class>com.employmeo.objects.BillingItem</class>
		<class>com.employmeo.objects.CorefactorDescription</class>
		<class>com.employmeo.objects.SurveySection</class>
		<class>com.employmeo.objects.SurveySectionPK</class>
     	<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
         	<property name="eclipselink.connection-pool.default.initial" value="1"/>
			<property name="eclipselink.connection-pool.node2.min" value="16"/>
			<property name="eclipselink.connection-pool.node2.max" value="16"/>
			<!--  debug logging properties, should enable on demand. -->
			<!-- Level Configs: http://www.eclipse.org/eclipselink/documentation/2.5/jpa/extensions/p_logging_level.htm  -->
<!-- 			
			<property name="eclipselink.logging.level" value="FINE"/>
